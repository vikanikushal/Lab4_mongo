Question6

db.posts.aggregate([{$group : {_id : "$category", total : {$sum : "$number_of_views"}}}])	





--------------------------------------------------------------------------------
Question7

function mapFunc() {
  for (i in this.tags) {
    val={count:1, views:this.views};
    emit(this.tags[i], val);
  }
}

function reduceFunc(tag, values) {
  sum={count:0,views:0};
  for(i in values)
  {
    sum.count+=i.count;
    sum.views+=i.views;
  };
  return sum;
}

db.posts.mapReduce(mapFunc, reduceFunc, { query: {}, out: "rr" });
db.rr.find()





